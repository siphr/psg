# Maintainer: siphr <archlinux@techtum.dev>
pkgname=psg
pkgver=0.0
pkgrel=2
pkgdesc="Pakistan SUI Gass Bill and Tariff."
depends=(python)
arch=(x86_64)
source=("https://github.com/siphr/psg.git")
url=https://www.techtum.dev/work-psg-220228.html
license=('MIT')

build() {
    echo "PREPARING..."
    pip install psg
    
    echo "echo BUILD DATE: `date`" > psg
    echo "python -m psg \$@" >> psg

    chmod +x $srcdir/psg
}

package() {
    echo "INSTALLING..."
    mkdir -p $pkgdir/usr/bin
    cp "$srcdir/psg" "$pkgdir/usr/bin/psg"
    echo 'Finished setting up psg.'
}

md5sums=('SKIP')
